#!/usr/sbin/nft -f

# create the table netsec
#   note that we don't need to use nft here, simple start the command.
add table ip netsec_tbl

# create our first chain for incoming traffic
add chain netsec_tbl netsec_input { type filter hook input priority 0 ; policy drop ;}
add chain netsec_tbl netsec_forward { type filter hook forward priority 0 ; policy drop ; comment "Allow ssh, telnet, http from client only" ; }
